@page
@model Web.Pages.Admin.ProductsManagement.IndexModel
@{
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-8">
        <h3>Products Management</h3>
    </div>
    <div class="col-4">
        <a asp-page="Upsert" class="btn btn-outline-primary mb-3">Add Product</a>
    </div>
</div>


<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th style="width: 4rem">Id</th>
            <th style="width: auto">Name</th>
            <th style="width: 10rem">Price</th>
            <th style="width: 10rem">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <a asp-page="Upsert" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
