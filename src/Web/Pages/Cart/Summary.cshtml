@page 
@using System.Globalization
@model Web.Pages.Cart.SummaryModel
@{
    decimal total = 0;
}

<div class="container my-5 p-3 shadow-sm bg-white">
    <div class="display-4 text-center my-5 pb-5">Checkout</div>
    <div class="row">
        <div class="col-md px-5">
            <h4 class="mb-4">Shipping Details</h4>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Phone</label>
                <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Address</label>
                <input class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Country</label>
                <input class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">City</label>
                <input class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Postal Code</label>
                <input type="number" class="form-control" />
            </div>
        </div>

        <div class="col-md mt-5 mt-md-0 px-5">
            <div class="row">
                <h4 class="mb-4">Summary</h4>
                    
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th class="text-center">Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.CartItems)
                        {
                            total += item.Product.Price * item.Quantity;
                            <tr>
                                <td>
                                    <div class="row">
                                        <div class="col-4">
                                            <img style="height: 4rem" src="@SiteConstants.ImagePath@item.Product.Image" asp-append-version="true">
                                        </div>
                                        <div class="col">
                                            <h5>@item.Product.Name</h5>
                                            @if(item.Product.IsOnSale)
                                            {
                                                <p>Price: @item.Product.SalePrice?.ToString("C")</p>
                                            }
                                            else
                                            {
                                                <p>Price: @item.Product.Price.ToString("C")</p>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    @item.Quantity
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row mb-4">
                <div class="col">
                    <h6>Discount Code</h6>
                    @if(Model.Order.HasCupon)
                    {
                        <div class="input-group">
                            <input id="discountCode" disabled class="form-control">
                            <div id="cuponButton">
                                <button id="removeCupon" class="btn btn-danger"><i class="bi bi-x-lg"></i></button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="input-group">
                            <input id="discountCode" class="form-control" />
                            <div id="cuponButton">
                                <button id="discountValidate" class="btn btn-success"><i class="bi bi-check-lg"></i></button>
                            </div>
                        </div>
                    }
                </div> 
                <div class="col text-end">
                    <div id="totalPartial">
                        <partial name="_OrderTotalPartial" model="@Model.Order" />
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center text-center my-5 border-2 border-top py-5">
            <form method="post" id="payment-form">
                <h4 class="mt-2">Payment</h4>
                <div id="dropin-container"></div>

                    <input id="total" hidden asp-for="@total" value="@total" />

                <input type="hidden" id="nonce" name="payment_method_nonce"/>
                <button type="submit" id="submit-button" class="btn btn-primary col-6">Submit Order</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://js.braintreegateway.com/web/dropin/1.33.1/js/dropin.min.js"></script>

    @*Payment*@
    <script>

        var client_token = '@ViewData["ClientToken"]';

        const form = document.getElementById('payment-form');

        braintree.dropin.create({
            authorization: client_token,
            container: '#dropin-container'
        },
        (error, dropinInstance) => {
            if (error) console.error(error);

            form.addEventListener('submit', event => {
                event.preventDefault();

                dropinInstance.requestPaymentMethod((error, payload) => {
                    if (error) console.error(error);

                    document.getElementById('nonce').value = payload.nonce;

                    form.submit();
                });
            });
        });

    </script>


    @*Validate cupon*@
    <script>

        $(document).on('click', '#discountValidate', function() {
            var cache = '@Model.Order.HasCupon';
            var code = $('#discountCode').val();

            $.ajax({
                type: 'GET',
                url: '@Url.Page("Summary","Discount")',
                data: {
                    prodCode: code
                },
                success: function(result) {
                    cache = result;
                    
                    if (result == "True") {

                        $('#totalPartial').load('?handler=PartialTotal');
                        $('#discountCode').prop('disabled', true);
                        $('#cuponButton').html('<button id="removeCupon" class="btn btn-danger"><i class="bi bi-x-lg"></i></button>');
                    }
                    else if (result == "False") {
                        alert("Invalid Cupon");
                    }
                },
                error: function() {

                    alert('Error');

                }
            });
        });

    </script>

    @*Remove cupon*@
    <script>

        $(document).on('click', '#removeCupon', function() {
            $.ajax({
                type: 'GET',
                url: '@Url.Page("Summary","RemoveDiscount")',
                success: function() { 
                    $('#totalPartial').load('?handler=PartialTotal');
                    $('#discountCode').prop('disabled', false);
                    $('#cuponButton').html('<button id="discountValidate" class="btn btn-success"><i class="bi bi-check-lg"></i></button>');
                },
                error: function() {

                    alert('Error');

                }
            });
        });

    </script>


}
