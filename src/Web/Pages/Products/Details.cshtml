@page "{id}"
@model Web.Pages.Products.DetailsModel
@{
    
}

<div class="container-lg">

    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-light p-2 rounded-0">
                    <li class="breadcrumb-item"><a asp-page="/Products/Index" asp-route-category="All">Products</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Products/Index" asp-route-category="@Model.Category.Name">@Model.Category.Name</a></li>
                </ol>
            </nav>
        </div>    
    </div>

    <div class="row mb-5">
        <div class="col d-flex justify-content-end">
             <img class="mx-3" style="height: auto" src="@SiteConstants.ImagePath@Model.Product.Image" asp-append-version="true" />
        </div>
        <div class="col">

            <h1>@Model.Product.Name</h1>
            <p>Quantity: @Model.Product.Quantity</p>
            @if(Model.Product.IsOnSale)
            {
                <span class="card-text text-muted text-decoration-line-through">@Model.Product.Price.ToString("C")</span>
                <h3>@Model.Product.SalePrice?.ToString("C")</h3>
            }
            else
            {
                <h3>@Model.Product.Price</h3>
            }
            @if(Model.Product.InStock)
            {
                <form method="post">  
                    <input type="number" min="1" max="50" class="form-control mb-3" style="width: 4rem" asp-for="Quantity"/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                    <input hidden name="ProductId" value="@Model.Product.Id" />
                    <button asp-page="Details" class="btn btn-primary"><i class="bi bi-cart-plus"></i> Add To Cart</button>
                </form>

                @if(Model.IsAlreadyFavorite)
                {
                    <button class="btn btn-primary" id="addFavorite"><i class="bi bi-heart"></i> Remove From Favorites</button>   
                }
                else
                {
                    <button class="btn btn-primary" id="addFavorite"><i class="bi bi-heart"></i> Add To Favorites</button>    
                }
              
            }
            else
            {
                <button disabled class="btn btn-primary">Out Of Stock</button>       
                
                @if(Model.IsAlreadyFavorite)
                {
                    <button class="btn btn-primary" id="addFavorite"><i class="bi bi-heart"></i> Remove From Favorites</button>   
                }
                else
                {
                    <button class="btn btn-primary" id="addFavorite"><i class="bi bi-heart"></i> Add To Favorites</button>    
                }
            }
                
        </div>
    </div>

    @if (Model.Tags != null)
    {
        <div class="row mb-5">
            <div class="col">
                <h6>Tags</h6>
                @foreach(var tag in Model.Tags)
                {
                    <span class="badge bg-secondary">@tag</span>
                }
            </div>
        </div>   
    }
    

    <div class="row" style="height: 25rem">
        <div class="col">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Description</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="ingridients-tab" data-toggle="tab" href="#ingridients" role="tab" aria-controls="ingridients" aria-selected="false">Ingridients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Reviews</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">@Model.Product.Description</div>
                <div class="tab-pane fade" id="ingridients" role="tabpanel" aria-labelledby="ingridients-tab">@Model.Product.Ingredients</div>
                <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">...</div>
            </div>
        </div>
    </div>


    <h3>You May Also Like</h3>

    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-center">
                <partial name="_ProductListPartial" model="Model.RelatedProducts" />
            </div>
            
        </div>
       
    </div>
   
</div>


@section scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        $('#myTab a').on('click', function (e) {
          e.preventDefault()
          $(this).tab('show')
        })
    </script>
    
    <script>
        $(document).ready(function() {
            var cache = '@Model.IsAlreadyFavorite';

            $('#addFavorite').click(function() {
                $.ajax({
                    type: 'GET',
                    url: '@Url.Page("Details","Favorite")',
                    data: {
                        id: @Model.ProductId,
                        favorite: cache
                    },
                    success: function(result) {
                        cache = result;
                        
                        if (result == "False") {
                            
                            $('#addFavorite').html("Add To Favorites").prepend('<i class="bi bi-heart"></i>');
                        }
                        else {
                            
                            $('#addFavorite').html("Remove From Favorites").prepend('<i class="bi bi-heart"></i>');
                        }
                    },
                    failure: function() {
                        alert("failure");
                    },
                    error: function() {
                        alert("error");
                    }
                });
            });
        });
    </script>

}
