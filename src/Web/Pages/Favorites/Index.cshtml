@page
@model Web.Pages.Favorites.IndexModel


<h2>Favorites</h2>

<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        @foreach(var product in Model.FavoriteProducts)
        {
            <li class="list-group-item"><a asp-page="/Products/Details" asp-route-id="@product.Id">@product.Name</a></li>
        }
    </ul>
</div>
