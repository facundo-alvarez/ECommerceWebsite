@model  IReadOnlyList<ApplicationCore.Entities.Address>

<table class="table" id="shippingAddresses">
    <tbody>
    @foreach(var address in Model)
    {
        <tr>
            <td style="width:20px">
                <div class="form-check">
                    <input type="radio" class="form-check-inline" name="radioNoLabel" id="@address.Id" >
                </div>
            </td>
            <td>
                <h6 class="mb-0">@address.FullName()</h6>
                <p class="mb-0">@address.AddressLineOne</p>
                <p class="mb-0">@address.AddressLineTwo</p>
                <p class="mb-0">@address.PostalCode @address.City</p>
                <p class="mb-0">@address.Country</p>
            </td>
        </tr>
    }
        <tr>
            <td>
                <div class="form-check">
                    <input type="radio" class="form-check-inline" name="radioNoLabel" id="newAddress" >
                </div>
            </td>
            <td>
                <h6 class="mb-0">New Address</h6>
            </td>
        </tr>
    </tbody>
</table>
<div class="row">
    <button disabled id="applyButton" class="btn btn-success px-5 my-4">Apply</button>
</div>