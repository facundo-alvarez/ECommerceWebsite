<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100 mb-0 pb-0">
    <header class="container-fluid bg-light mb-3">
        <div class="container">
            <div class="d-flex justify-content-center p-0 m-0 py-4 ">
                <a asp-page="/Index"><img src="~/logo.png" width="150" asp-append-version="true" /></a>
            </div>
        </div>
    </header>
    <main role="main" class="my-3">
        @RenderBody()
    </main>


    <footer class="container-fluid bg-dark mt-auto text-white">
        <div class="container py-5">
            <a class="text-reset text-decoration-none" asp-page="/Index"><i class="bi bi-arrow-left"></i> Return to store</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
 

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>